# focus window
cmd - h : ~/.scripts/yabai-move.sh west
cmd - l : ~/.scripts/yabai-move.sh east
cmd - k : ~/.scripts/yabai-move.sh north
cmd - j : ~/.scripts/yabai-move.sh south

# focus workspace
shift + cmd - 1  : yabai -m window --space 1
shift + cmd - 2  : yabai -m window --space 2
shift + cmd - 3  : yabai -m window --space 3
shift + cmd - 3  : yabai -m window --space 5
shift + cmd - 3  : yabai -m window --space 6
shift + cmd - 3  : yabai -m window --space 7
shift + cmd - 3  : yabai -m window --space 8
shift + cmd - 3  : yabai -m window --space 9

# swap managed window
shift + cmd - h : yabai -m window --swap west
shift + cmd - l : yabai -m window --swap east
shift + cmd - k : yabai -m window --swap north
shift + cmd - j : yabai -m window --swap south

# balance
cmd - b : yabai -m space --balance

# toggle vertical
cmd - e : yabai -m space --rotate 90
